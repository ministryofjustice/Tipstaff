@model Tipstaff.Models.ChildAbduction

@{
    ViewBag.Title = "Create child abduction";
}
    <h1>@ViewBag.Title</h1>
<h6>@Html.ActionLink("Child Abductions","Index") > Create</h6>

@using (Html.BeginForm()) 
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();
    <fieldset>
        <legend>Child Abduction details</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.orderDated, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.orderDated)
            @Html.ValidationMessageFor(model => model.orderDated)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.orderReceived, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.orderReceived)
            @Html.ValidationMessageFor(model => model.orderReceived)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sentSCD26, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sentSCD26)
            @Html.ValidationMessageFor(model => model.sentSCD26)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.officerDealing, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.officerDealing)
            @Html.ValidationMessageFor(model => model.officerDealing)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nextReviewDate)<span class="required-star">*</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nextReviewDate)
            @Html.ValidationMessageFor(model => model.nextReviewDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.caOrderTypeID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.caOrderTypeID, (SelectList)ViewBag.caOrderTypeID, "Please choose an Order type", new { @class = "required" })
            @Html.ValidationMessageFor(model => model.caOrderTypeID)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.caseStatusID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.caseStatusID, (SelectList)ViewBag.childAbductionCaseStatusList, "Please choose a status", new { @class = "required" },"1")
            @Html.ValidationMessageFor(model => model.caseStatusID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.protectiveMarkingID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.protectiveMarkingID, (SelectList)ViewBag.protectiveMarkingList, "Please select a marking", new { @class = "required" })            
            @Html.ValidationMessageFor(model => model.protectiveMarkingID)
        </div>

        @Html.HiddenFor(model => model.Retention, new { Value = true })

        @Html.HiddenFor(model => model.createdBy) 
        @Html.HiddenFor(model => model.createdOn, DateTime.Today,null)

        <p>
            <input type="submit" value="Create" />
        </p>
        <div>Fields marked<span class="required-star">*</span> are mandatory and must be completed before the record can be saved.</div>
    </fieldset>
}