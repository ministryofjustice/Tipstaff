@model Tipstaff.Models.Passport

@{
    ViewBag.Title = string.Format("Edit passport details for {0}", Model.passportReference);
}
@{
    string controller = genericFunctions.TypeOfTipstaffRecord(Model.tipstaffRecordID);
    string display = controller == "Warrant" ? "Warrants" : "Child Abductions";
    string nameType = controller == "Warrant" ? "Contemnor" : "Respondent";
}
<h1>@ViewBag.Title</h1>
<h6>
    @Html.ActionLink(display, "Index", controller)
    > @Html.ActionLink(Model.tipstaffRecord.UniqueRecordID, "Details", controller, new { id = Model.tipstaffRecord.tipstaffRecordID }, null)
    > Edit passport
</h6>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
<fieldset>
    <legend>Edit details</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.passportReference, true)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.passportReference)
        @Html.ValidationMessageFor(model => model.passportReference)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.countryID, true)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.countryID, Model.CountryList, "Select a country", new { @class = "required" })
        @Html.ValidationMessageFor(model => model.countryID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.nationalityID, true)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.nationalityID, Model.NationalityList, "Select a nationality", new { @class = "required" })
        @Html.ValidationMessageFor(model => model.nationalityID)
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.passportStatusID, true)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.passportStatusID, Model.StatusList, "Select a Status", new { @class = "required" })
        @Html.ValidationMessageFor(model => model.passportStatusID)
    </div>
    <div class="editor-label">
        Please select file to upload
    </div>
    <div class="editor-field">
        <input name="uploadFile" type="file" title="Upload file" />
    </div>
    @Html.HiddenFor(model => model.tipstaffRecordID)

    <div class="editor-label">
        @Html.LabelFor(model => model.comments, true)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.comments)
        @Html.ValidationMessageFor(model => model.comments)
    </div>

    <p>
        <input type="submit" value="Save" />
    </p>
</fieldset>
}