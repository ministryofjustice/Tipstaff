@model Tipstaff.Models.Respondent

@{
    ViewBag.Title = string.Format("Details for {0}: {1}", genericFunctions.TypeOfTipstaffRecord(Model.tipstaffRecordID) == "Warrant" ? "Contemnor" : "Respondent", Model.fullname);
}
@{ 
    string controller = genericFunctions.TypeOfTipstaffRecord(Model.tipstaffRecordID);
    string display = controller == "Warrant" ? "Warrants" : "Child Abductions";
    string nameType = controller == "Warrant" ? "Contemnor" : "Respondent";
}
    <h1>@ViewBag.Title</h1>
<h6>@Html.ActionLink(display,"Index",controller)
> @Html.ActionLink(Model.tipstaffRecord.UniqueRecordID,"Details",controller, new{id=Model.tipstaffRecordID},null)
> (Respondent) @Model.PoliceDisplayName</h6>

<fieldset>
    <legend>Details for @nameType record @Model.fullname</legend>
    @Html.Partial("_ViewRespondentBase", Model)
</fieldset>
    @Html.ActionLink("Edit Respondent Record", "Edit", new { id = Model.respondentID })
