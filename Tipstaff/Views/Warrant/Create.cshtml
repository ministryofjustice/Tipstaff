@model Tipstaff.Models.Warrant

@{
    ViewBag.Title = "Create Warrant";
}
<h6>@Html.ActionLink("Warrants","Index") > @ViewBag.Title</h6>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();
    <fieldset>
        <legend>Warrant details</legend>

        @Html.HiddenFor(model => model.createdBy)

        <div class="editor-label">
            @Html.LabelFor(model => model.divisionID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.divisionID, (SelectList)ViewBag.divisions, "Select a Division")
            @Html.ValidationMessageFor(model => model.divisionID) 
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.caseNumber, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.caseNumber) 
            @Html.ValidationMessageFor(model => model.caseNumber) 
        </div>        
        
        <div class="editor-label">
            Initial review date<span class="required-star">*</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nextReviewDate)
            @Html.ValidationMessageFor(model => model.nextReviewDate) 
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.expiryDate, true)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.expiryDate) 
            @Html.ValidationMessageFor(model => model.expiryDate) 
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DateCirculated, true)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.DateCirculated) 
            @Html.ValidationMessageFor(model => model.DateCirculated) 
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.protectiveMarkingID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.protectiveMarkingID, (SelectList)ViewBag.protectiveMarkings, "Select a marking") 
            @Html.ValidationMessageFor(model => model.protectiveMarkingID) 
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.caseStatusID, true)
        </div>
        <div class="editor-field">
            @Html.DropDownList("caseStatusID") 
            @Html.ValidationMessageFor(model => model.caseStatusID) 
        </div>

        @Html.HiddenFor(model => model.createdBy) 
        <p>
            <input type="submit" value="Create" />
        </p>
        <div>Fields marked<span class="required-star">*</span> are mandatory and must be completed before the record can be saved.</div>
        @if (ViewBag.noDateCirculated != "")
        {
            <font color="red">@ViewBag.noDateCirculated</font>
        }
    </fieldset>
}