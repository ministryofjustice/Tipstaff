        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().riskOfDrugs)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().riskOfDrugs)
        </div>
    </div>
    <div id="respdataPt2" style="width:33%;float:right;clear:none">
        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().nameLast)</div>
        <div class="display-field">
            @Model.Respondents.SingleOrDefault().nameLast.ToUpper() 
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().nameFirst)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().nameFirst)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().nameMiddle) </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().nameMiddle)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().DateofBirthDisplay)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().DateofBirthDisplay)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().gender.GenderId)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().gender.Detail)
        </div>
        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().country)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().country.Detail)
        </div>
        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().nationality)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().nationality.Detail)
        </div>
        
        @if (Model.Respondents.SingleOrDefault().PNCID != null)
        { 
            <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().PNCID)</div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Respondents.SingleOrDefault().PNCID)
            </div>
        }

    </div>
       break;
    default:
    <div><h2 class="error">An error has occurred, more than one Contemnor is recorded for this warrant, please raise a help desk call</h2></div>
       break;
}
</fieldset>
<script type="text/javascript">
    $(function () {
        $("#tabs").tabs({
            ajaxOptions: {
                error: function (xhr, status, index, anchor) {
                    $(anchor.hash).html(
						"Couldn't load this tab. Please contact the helpdesk and raise a call, we'll try to fix this as soon as possible.");
                }
            }
        });
    });
</script>
