                         break;
    case 1: 
    <div id="respdataPt1" style="width:33%;float:right;clear:none">
        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().hairColour)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().hairColour)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().eyeColour)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().eyeColour)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().skinColour.SkinColourId)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().skinColour.Detail)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().height)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().height)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().build)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().build)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().specialfeatures)</div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Respondents.SingleOrDefault().specialfeatures)
        </div>

        <div class="display-label">@Html.LabelFor(model => model.Respondents.SingleOrDefault().riskOfViolence)</div>
        <div class="display-field">
