        });

        window.appInsights = appInsights;
        appInsights.trackPageView();
    </script>
</head>
<body>
    <div>
        <div id="header">
            @{
                string logo = "";
                switch (System.Configuration.ConfigurationManager.AppSettings["CurServer"])
                {
                    case "PRODUCTION":
                        logo = "";
                        break;
                    default:
                        logo = "train";
                        break;

                }
            }
            <div class="logo">
                <img src="@Url.Content("~/Images/hmcts-logo.png")" alt="HMCTS Logo" width="550" height="50" style="float:left;" />
                <img src="@Url.Content("~/Images/app-logo.png")" alt="Application Logo" style="float:right;margin-right:0px!important;vertical-align:bottom;" class="@logo" />
            </div>
            @Html.Partial("menuBar")
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <p>
                This site is supported by @System.Configuration.ConfigurationManager.AppSettings["supportTeam"].
                <b><a href="mailto:@System.Configuration.ConfigurationManager.AppSettings["supportEmail"]?subject=Support%20request&body=Please%20describe%20the%20problem%20%0D%0A%0D%0A%0D%0A%0D%0A%0D%0ASystem%20Data:%0D%0AUser:@User.Identity.Name%0D%0AURL:@Request.Url.AbsoluteUri" target="_top">Contact Us</a></b> if you experience a problem with it.
            </p>
        </div>
    </div>

</body>
</html>
