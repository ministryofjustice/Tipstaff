@model Tipstaff.Models.DeletedReason

@{
    ViewBag.Title = string.Format("Edit deleted reason {0}", Model.Detail);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h6>@Html.ActionLink("Administration", "Index", "Admin") 
> @Html.ActionLink("Lookups", "Lookups", "Admin") 
> @Html.ActionLink("Deletion reasons","Index") 
> @Html.ActionLink(Model.Detail, "Details", "DeletionReasons", new { id = Model.deletedReasonID }, null)
> Edit</h6>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken();
    <fieldset>
        <legend>@ViewBag.Title</legend>
        @Html.HiddenFor(model => model.deletedReasonID)
        @Html.HiddenFor(model => model.active)

        <div class="editor-label">
            @Html.LabelFor(model => model.Detail, true)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Detail)
            @Html.ValidationMessageFor(model => model.Detail)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}