@model Tipstaff.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}

    <h3>Change Password</h3>

    Use the form below to change your password. 
    <ul>
        <li>New passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.</li>
        <li>Password should have a minimum of @Membership.MinRequiredNonAlphanumericCharacters non-alpha numeric character@(Membership.MinRequiredNonAlphanumericCharacters == 1 ? "" : "s") ($!@@* etc.)</li>
        <li>You cannot re-use passwords for 1 year</li>
    </ul>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.OldPassword, true)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword, true)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword, true)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="Change Password" />
            </p>
        </fieldset>
    </div>
}
